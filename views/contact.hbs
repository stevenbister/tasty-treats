<h1>{{title}}</h1>

<h2>Send us a message</h2>

<form action="/contact" method="post" novalidate>
  <label for="name">Name</label>
  <input type="text" name="name" id="name" class="form__input {{#if errors.name }}form__input--error{{/if}}">
  {{#if errors.name }}
  <div>
    {{ errors.name.msg }}
  </div>
  {{/if}}

  <label for="email">Email Address</label>
  <input type="email" name="email" id="email" class="form__input {{#if errors.email }}form__input--error{{/if}}">
  {{#if errors.email }}
  <div>
    {{ errors.email.msg }}
  </div>
  {{/if}}

  <label for="message">Message</label>
  <textarea name="message" id="message" cols="30" rows="10"
    class="form__textarea {{#if errors.name }}form__textarea--error{{/if}}"></textarea>
  {{#if errors.message }}
  <div>
    {{ errors.message.msg }}
  </div>
  {{/if}}

  <label for="subscribe">Subscribe to our newsletter</label>
  <input type="checkbox" id="subscribe" name="subscribe" class="form__checkbox">

  <button class="form__submit">submit</button>
</form>