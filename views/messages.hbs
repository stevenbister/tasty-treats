<header class="page__header" {{#if image}}style="background-image: url({{image}});" {{/if}}>
  <h1 class="page__header-title">{{title}}</h1>
</header>

<section class="page__section">
  <h2>{{numberOfMessages}} messages submitted</h2>
  {{#each messages}}
  <div class="message">
    <div class="message__meta">
      <p>Name: {{this.name}}</p>
      <p>Email: {{this.email}}</p>
      <p>Date: {{this.date}}</p>
      {{#if this.subscribe}}
      <p>Signed up to newsletter</p>
      {{/if}}
    </div>
    <div class="message__body">
      {{this.message}}
    </div>
  </div>
  {{/each}}

</section>